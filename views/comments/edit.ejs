<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 50%; margin: 25px auto;">
            <h1 class="text-center">Edit Comment</h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <label for="content">Content</label>
                    <input type="text" class="form-control" name="comment[content]" id="content" value="<%= comment.content %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>